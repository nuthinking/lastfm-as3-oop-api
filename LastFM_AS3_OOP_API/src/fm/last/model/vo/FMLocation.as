	/**	 * ValueObject used in FMVenue	 * 	 * @see FMVenue	 * 	 * @author christian	 */	public class FMLocation 	{		public var city : String;		public var country : String;		public var street : String;		public var postalCode : String;		public var geo : FMGeo;		public var timezone : String;				public function FMLocation()		{		}				protected function populateFromXML ( xml : XML ) : void		{			var geoNamespace : Namespace = xml.namespace('geo');			city = xml.city.text();			country = xml.country.text();			street = xml.street.text();			postalCode = xml.postalcode.text();			geo = LastFMPreferences.modelFactory.createGeo(xml.geoNamespace::point[0]);			timezone = xml.timezone.text();		}				public function toString () : String		{			return TraceUtils.generateObjectDescription(this, ["city","country","geo"]);		}				public static function createFromXML(xml : XML) : FMLocation		{			var l : FMLocation = new FMLocation();			l.populateFromXML(xml);			return l;		}	}}