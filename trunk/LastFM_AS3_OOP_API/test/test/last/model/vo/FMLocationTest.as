	import test.last.model.FMModelTest;
	/**	 * @author christian	 */	public class FMLocationTest extends FMModelTest 	{		[Embed("../../../../data/constructors/location.xml", mimeType="application/octet-stream")]      	private static const CONSTRUCTOR_XML_CLASS:Class;      			public function FMLocationTest(methodName : String = null)		{			super(methodName);		}				public function testCreateFromXML () : void		{			var l : FMLocation = FMLocation.createFromXML(getEmbeddedXML(CONSTRUCTOR_XML_CLASS));			assertEquals("createFromXML should set location city", "Milano", l.city);			assertEquals("createFromXML should set location country", "Italy", l.country);			assertEquals("createFromXML should set location street", "Via Pietrasanta 14", l.street);			assertEquals("createFromXML should set location postalcode", "20124", l.postalCode);			assertEquals("createFromXML should set location geo latitude", "45.443797", l.geo.latitude);			assertEquals("createFromXML should set location geo longitude", "9.196507", l.geo.longitude);			assertEquals("createFromXML should set location geo timezone", "CET", l.timezone);		}	}}